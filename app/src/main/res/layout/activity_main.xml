<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@id/buttonType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="drawable"
        android:textColor="@color/button_text" />

    <Button
        android:id="@+id/button_animation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="animation"
        android:textColor="@color/button_text" />
 <Button
        android:id="@+id/button_bind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="binding"
        android:textColor="@color/button_text" />

    <ImageView
        android:id="@id/imageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="@bool/screen_small"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahha" />

    <TextView
        android:id="@+id/home_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页数据" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_pending_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <viewmodel.wondersgroup.com.view.RefreshRecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>